{
  "name": "Greeter Robot",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://service.berlin.de/terminvereinbarung/termin/day/*"],
      "js": [
        "js/app.js"
      ]
    }
  ],
  "background" : {
    "scripts" : ["js/background.js"],
    "persistent": false
  },
  "permissions": ["notifications"],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}